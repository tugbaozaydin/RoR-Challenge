= simple_form_for @user do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.button :submit
= form_for @user do |f|
  = f.simple_fields_for :profile do |p|
    = p.input :name
    = p.input :surname
    = p.input :phone_number
    = p.input :university
    = p.button :submit
